<div class="container mb-5">
  <div class="row mt-5 mb-5">
    <%= render 'posts/form', post_new: @post_new %>
    <div class="col-md-8">
      <% if @user.id == current_user.id %>
      <h3 class="mb-4 text-center">My Page</h3>
      <% else %>
      <h3 class="mb-4 text-center">User Information</h3>
      <% end %>
      <h5 class="mb-4 text-center"><%= @user.name %></h5>
      <div class="mb-2 text-center"><%= render 'status', user: @user %></div>
      <div class="mb-4 text-center"><%= render 'follow_form', user: @user %></div>
      <div class="mb-4 layout">
        <%= simple_format(h(@user.introduction)) %>
      </div>
      <div class="text-center">
      <% if @user.id == current_user.id %>
        <button type="button" class="btn btn-info">
          <%= link_to "Edit", edit_user_path(@user), class: 'edit' %>
        </button>
        <button type="button" class="btn btn-warning">
          <%= link_to "Liked posts", likes_path(@user), class: 'edit' %>
        </button>
        <button type="button" class="btn btn-light">
          <%= link_to "Calendar", blogs_path, class: 'calendar' %>
        </button>
      <% end %>
      </div>
    </div>
  </div>
  <div class="row">
    <div class="col-md-4"></div>
    <div class="col-md-8">
      <h3>Posts</h3>
      <% @posts.each do |post| %>
        <div class="row mb-5 height" style="background-color: #deb887;">
        <%= link_to post_path(post.id) do %>
          <div class="col-md-5 text-center">
            <%= attachment_image_tag post, :image, :fill, 250, 250 %>
          </div>
        <% end %>
          <div class="col-md-5 pt-3">
            <p class="text-white">title: <%= post.title %></p>
            <p class="text-white">shop name: <%= post.shop_name %>
            <p class="text-white"><%= safe_join(post.introduction.split("\n"), tag(:br)) %></p>
          </div>
          <div class="col-md-2 pt-3 text-center text-white">
            <div class="pb-4">
              いいね数<br>
              <%= post.likes.count %>
            </div>
            <div class="pb-4">
              コメント数<br>
              <%= post.post_comments.count %>
            </div>
            <div>
              投稿日時<br>
              <%= post.created_at.strftime('%Y/%m/%d') %><br>
            </div>
          </div>
        </div>
      <% end %>
    </div>
  </div>
  <div class="row">
    <div class="col-md-4"></div>
    <div class="col-md-8">
      <%= paginate @posts %>
    </div>
  </div>
</div>

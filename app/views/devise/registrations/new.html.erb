<%= render "devise/shared/error_messages", resource: resource %>
<div class="row">
  <div class="col-6 mx-auto mt-5 mb-5" style="background-color: rgba(210,180,140,0.5);">
    <h4 class="col-4 mx-auto mt-5 mb-5 text-center">新規会員登録</h4>
    <div class="row mt-3">
      <div class="col-6 mx-auto text-center">
        <p>会員でない方はこちらから新規登録</p>
      </div>
    </div>
    <div class="col-8 mx-auto">
    <%= form_with model: @user, url: user_registration_path, id: 'new_user', class: 'new_user', local: true do |f| %>
      <div class="form-group row">
        <div class="col-md-5">
          <%= f.label "名前", class: "col-form-label" %>
        </div>
        <div class="col-md-7">
          <%= f.text_field :name, autofocus: true, autocomplete: "name", class: "form-control" %>
        </div>
      </div>
      <div class="form-group row">
        <div class="col-md-5">
          <%= f.label "メールアドレス", class: "col-form-label" %>
        </div>
        <div class="col-md-7">
          <%= f.email_field :email, autofocus: true, autocomplete: "email", class: "form-control" %>
        </div>
      </div>
      <div class="form-group row">
        <div class="col-md-5">
          <%= f.label "パスワード", class: "col-form-label" %>
        </div>
        <div class="col-md-7">
          <% if @minimum_password_length %>
            <em>(<%= @minimum_password_length %> characters minimum)</em>
          <% end %><br />
          <%= f.password_field :password, autocomplete: "new-password", class: "form-control" %>
        </div>
      </div>
      <div class="form-group row">
        <div class="col-md-5"></div>
        <div class="col-md-7">
          <%= f.password_field :password_confirmation, autocomplete: "new-password", class: "form-control" %>
        </div>
      </div>
      <div class="row">
        <div class="col- mx-auto mt-2 mb-5">
        <%= button_tag :type => "submit", style: 'border-style: none; background-color: rgba(210,180,140,0.1);' do %>
          <i class="fas fa-user-plus fa-2x faa-wrench animated-hover iro"></i>
        <% end %>
        </div>
      </div>
    <% end %>
    </div>
    <div class="row">
      <p class="col-6 mx-auto text-center">会員様↓</p>
    </div>
    <div class="row">
      <div class="col-6 mx-auto mb-5 text-center">
        <%= link_to "こちら", new_user_session_path %>  からログインを行ってください
      </div>
    </div>
  </div>
</div>

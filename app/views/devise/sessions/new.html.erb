<div class="container" style="width: 500px; height: 600px; background-color: rgba(210,180,140,0.5);">
  <div style="padding-top: 25px;">
    <h3 class='mt-5 mx-auto d-table'>ログイン</h3>
    <div class='text-center'>
      <%= form_with model: @user, url: user_session_path, local: true do |f| %>
        <form class="form-horizontal">
          <div class="form-group mt-5">
            <label class="col-md-3 control-label"><%= f.label :名前 %></label>
            <div class="col-md-5 mx-auto"><%= f.text_field :name, autofocus: true, autocomplete: "name" %></div>
          </div>
          <div class="form-group mt-5">
            <label class="col-md-3 control-label"><%= f.label :パスワード %></label>
            <div class="col-md-5 mx-auto"><%= f.password_field :password, autocomplete: "current-password" %></div>
          </div>

          <div class="actions mt-4">
            <%= f.button :type => "submit", style: 'border-style: none;' do %>
              <i class="fas fa-sign-in-alt fa-2x faa-horizontal animated-hover iro"></i>
            <% end %>
          </div>
        </form>
      <% end %>
      <h5 class='mt-5'>会員登録がお済みでない方</h5>
      <p class='mt-4'><%= link_to "こちら", new_user_registration_path %>から新規登録を行って下さい</p>
    </div>
  </div>
</div>

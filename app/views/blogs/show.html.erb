<p id="notice"><%= notice %></p>
<div class="container mt-5">
  <div class="row text-center">
    <div class="col-md-3"></div>
    <div class="col-md-6">
      <p>
        <strong>タイトル</strong><br>
        <%= @blog.title %>
      </p>
      <p>
        <strong>内容</strong><br>
        <%= @blog.content %>
      </p>
      <p>
        <strong>日時</strong><br>
        <%= @blog.start_time.strftime("%Y/%m/%d %H:%M") %>
      </p>
      <button type="button" class="btn btn-light btn-sm">
        <%= link_to 'Back', blogs_path, class: 'back' %>
      </button>
      <button type="button" class="btn btn-info btn-sm">
        <%= link_to 'Edit', edit_blog_path(@blog.id), class: 'edit' %>
      </button>
      <button type="button" class="btn btn-danger btn-sm">
        <%= link_to 'Destroy', blog_path(@blog.id), method: :delete, data: { confirm: '本当に削除しますか?' }, class: 'destroy' %>
      </button>
    </div>
  </div>
</div>
